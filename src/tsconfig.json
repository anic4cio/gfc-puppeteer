{
  "compilerOptions": {
    "lib": ["ES7"],
    "target": "ESNext",
    "module": "CommonJS",
    "baseUrl": ".",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules",
  ]
}